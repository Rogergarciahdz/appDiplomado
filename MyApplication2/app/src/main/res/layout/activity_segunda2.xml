<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActivity2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="323dp"
        android:layout_height="215dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/postura" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bienvenido " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="319dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="328dp"
        android:text="Imagen de muestra de postura correcta"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="628dp"
        android:contentDescription="dispositivos"
        android:text="Regresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="616dp"
        android:text="siguiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnonblu"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="384dp"
        android:text="conectar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnoffblu"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="384dp"
        android:text="Desconectar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnDispBT"
        android:layout_width="102dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="452dp"
        android:text="dispositivos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/idSpinDisp"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="448dp"
        android:contentDescription="dispositivos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConctar"
        android:layout_width="185dp"
        android:layout_height="54dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="516dp"
        android:text="conectar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>